{
  "version": 2,
  "functions": {
    "api/index.py": {
      "runtime": "python3.8",
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "myproject.settings",
    "DATABASE_URL": "your_database_url_here",
    "SECRET_KEY": "your_secret_key_here"
  }
}
